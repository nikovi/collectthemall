<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1 class="logs"> <strong>Edit <%=figure.name%></strong></h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/figures/<%= figure._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="figure[name]" value="<%=figure.name %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="figure[price]" value="<%= figure.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="figure[image]" value="<%=figure.image %>" >
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="figure[description]" value="<%=figure.description%>" >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a  href="/figures">Go Back</a>
        </div>
    </div>


<% include ../partials/footer %>